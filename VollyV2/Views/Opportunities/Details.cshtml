@model VollyV2.Models.Volly.ApplyModel

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Opportunity.Name);
}

<h3>@ViewData["Message"]</h3>
<div class="row">
    <div class="col-md-6 col-sm-12">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.DateTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.DateTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.EndDateTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.EndDateTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.ApplicationDeadline)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.ApplicationDeadline)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.Openings)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.Openings)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.Category)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.Category.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Opportunity.Organization)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Opportunity.Organization.Name)
            </dd>
        </dl>
    </div>
    <div class="col-md-6 col-sm-12">
        <img src="@Model.Opportunity.ImageUrl" />
        <form asp-action="Details" id="applyForm">
            <input asp-for="@Model.OpportunityId" type="hidden" class="form-control" id="OpportunityId" />
            <h3 class="d-flex justify-content-center"> Apply Now:</h3>
            <br />
            <div class="form-group row apply-opportunity-row">
                <label asp-for="@Model.Name" class="col-form-label col-sm-2">Name</label>
                <input asp-for="@Model.Name" class="form-control col-sm-10" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group row apply-opportunity-row">
                <label asp-for="@Model.Email" class="col-form-label col-sm-2">Email</label>
                <input asp-for="@Model.Email" class="form-control col-sm-10" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Message" class="row apply-opportunity-row col-form-label col-sm-2">Message</label>
                <div class="row apply-opportunity-row">
                    <div class="col-sm-2"></div>
                    <textarea asp-for="@Model.Message" class="form-control col-sm-10" rows="4"></textarea>
                </div>
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Volunteer</button>
        </form>
    </div>
</div>
