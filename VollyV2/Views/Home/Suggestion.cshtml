@model VollyV2.Models.Volly.SuggestionModel

@{
    ViewData["Title"] = "Suggestion";
    Layout = "_Layout";
}

<h2>Volly is still in Beta, we would love to have your feedback:</h2>
<h4><a href="mailto:admin@vollyapp.com">admin@vollyapp.com</a></h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Suggestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="col-form-label"></label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>

<h2>@ViewData["Message"]</h2>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



